<h1>CONTACTS</h1>

<a href="/contacts/new">NEW</a>
<form action="/search" method="get">
    <input type="text" name="query">
    <input type="submit" value="Search">
</form>
<% @contacts.each do |c|%>
    <div>
        <%= c.first_name %>
        <%= c.last_name %>
        <a href='/contacts/edit?id=<%=c.id%>'>EDIT</a>
        <a href='/contacts/destroy?id=<%=c.id%>'>DELETE</a>
    </div>
<% end %>