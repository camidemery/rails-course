
<%= form_for @visit do |f| %>

<label>Patient</label>
<select name="animal_id">
  <% @animal.each do |animal|%>
    <option value="<%=animal.id%>"><%=animal.last_name%>, <%=animal.first_name%></option>
  <%end%>
</select>

<div>
  <label>Weight:</label>
  <%= f.number_field :weight, placeholder: "lbs", step: 0.1%>
</div>

<div>
<label>Veterinarian:</label>
    <%= f.text_field :vet, placeholder: 'Veterinarian Name'%>
  </div>

<div>
    <%=f.submit "Save", class:"btn btn-primary"%>
</div>
<%end%>


