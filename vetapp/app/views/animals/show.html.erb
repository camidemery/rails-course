<main role="main">
  <div class="container border border-secondary rounded-lg mt-3">
    <h1 class="text-center">
      <%=@animal.last_name%>, <%=@animal.first_name%> (<%=@animal.sex%>)
    </h1>
  </div>
  <container>
    <div class="row justify-content-md-center p-2">
      <%=image_tag @animal.picture, height:200, width:'auto'%>
    </div>
    <div class="row justify-content-md-center p-2">
      <%= link_to "New Visit", new_visit_path, class:"btn btn-primary my-2" %>
    </div>
  </container>
  

<div class="p-3">
  <h5 >Visits:</h5>
  <% @animal.visits.each do |visit|%>
  <div>
      Date: <%=visit.created_at.strftime("%d %b %Y")%>
  </div>
  <div>
      Weight: <%=visit.weight%> lbs
  </div>
  <div>
      Veterinarian: <%=visit.vet%>
  </div>
  <div>Created By: User <%=visit.user_id%></div>
  <div>
        <%= link_to "Edit Visit", edit_visit_path(visit), class:"btn btn-primary my-2" %>
      </div>
  <%end%>
</div>
